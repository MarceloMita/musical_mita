<% if @cart_item.quantity == 1 %>
  $('#cart-list').append(`<%= render partial: 'shared/cart_product',
                                     locals: { cart_item: @cart_item } %>`);
<% else %>
  $('#quantity-product-<%= @cart_item.id %>').html(<%= @cart_item.quantity %>);
<% end %>
$("#cart-quantity").html(<%= @cart.quantity %>);
$('.subtotal-cost').html(`<%= number_to_currency(@cart.calculate_subtotal_value, unit: 'R$', separator: ',', delimiter: '.') %>`);
